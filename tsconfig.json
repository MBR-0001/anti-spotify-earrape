{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "esnext",
        "lib": ["ESNext"],
        "jsx": "preserve",
        "alwaysStrict": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "typeRoots": [
            "node_modules/@types",
            "@types"
        ],
        "noEmit": true,
        "allowImportingTsExtensions": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}